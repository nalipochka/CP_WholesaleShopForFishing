@model Product

@{
    ViewData["Title"] = "Details";
}
@section Styles{
    <style>
        .container {
            padding-left: 0;
        }

        img {
            height: 200px;
            object-fit: contain;
        }
    </style>
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WholesalePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WholesalePrice)
            <span>&nbsp;&#x20AC;</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RetailPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RetailPrice)
            <span>&nbsp;&#x20AC;</span>
        </dd>


        @* <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category!.Title)
        </dd>
    </dl>
    <div class="row">
        @foreach (var item in Model.Photos!)
        {
            <div class="col col-xl-3 col-lg-4 col-md-6 col-12 mb-5">
                <div class="container text-center">
                    <div class="card">
                        <img src="@item.PhotoUrl" alt="@item.FileName" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-outline-primary">Back to List</a>
</div>