@{

}

@model IndexViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Products</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a asp-action="AddProduct" asp-controller="Admin" class="btn btn-primary">Add Product</a>
        </div>
        <div class="col-md-4">
            <a asp-action="Create" asp-controller="Categories" class="btn btn-primary">Add Category</a>
        </div>
        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Categories" class="btn btn-primary">Categories</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Index">Users</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary" asp-area="" asp-controller="Claims" asp-action="Index">Claims</a>
        </div>
    </div>
</div>

<div class="row m-2">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card">
                <img class="card-img-top" src=@(Model.Photos.Where(p=>p.ProductId==product.Id).FirstOrDefault()!.PhotoUrl) alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text">Wholesale: @product.WholesalePrice <span>&nbsp;&#x20AC;</span></p>
                    <p class="card-text">Retail: @product.RetailPrice <span>&nbsp;&#x20AC;</span></p>
                </div>
                <a asp-action="Details" asp-controller="Admin" asp-route-id="@product.Id" class="btn btn-sm btn-success">Details</a>
                <a asp-action="Edit" asp-controller="Admin" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Admin" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
            </div>
        </div>
    }
</div>